Package: oem-config
Architecture: all
Depends: ${shlibs:Depends}, ${python:Depends}, debconf (>= 1.4.52), python-gtk2, python-glade2, xserver-xorg, metacity, localechooser-data, iso-codes, apt, locales (>= 2.3.7-1), console-data (>= 2002.12.04dbs-49ubuntu2), passwd, adduser
