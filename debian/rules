#!/usr/bin/make -f

export DH_OPTIONS

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

BUILDDIR=$(CURDIR)/debian/build

build: build-stamp

build-stamp:
	dh_testdir

	mkdir -p $(BUILDDIR)/ubuntu
	mkdir -p $(BUILDDIR)/guadalinex

	# Ubuntu-doc
	for file in $$(ls $(CURDIR)/glade/locale/ubuntu/*.po); do msgfmt -o $(BUILDDIR)/ubuntu/$$(echo $$(basename $$file) | sed -e 's,\.po$$,\.mo,') $(CURDIR)/glade/locale/ubuntu/$$(basename $$file); done || true

	# Guadalinex-doc
	for file in $$(ls $(CURDIR)/glade/locale/guadalinex/*.po); do msgfmt -o $(BUILDDIR)/guadalinex/$$(echo $$(basename $$file) | sed -e 's,\.po$$,\.mo,') $(CURDIR)/glade/locale/guadalinex/$$(basename $$file); done || true

	# Fixing perms
	chmod +x $(CURDIR)/lib/backend/*.py

	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -fr build-stamp $(BUILDDIR)

	dh_clean 

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -i

	# Ubuntu-doc
	for locale in $$(find $(BUILDDIR)/ubuntu/ -name \*.mo -exec basename {} \; | sed -e 's/\.mo//g'); do mkdir -p $(CURDIR)/debian/espresso-ubuntu-doc/usr/share/locale/$$locale/LC_MESSAGES/; mv $(BUILDDIR)/ubuntu/$$locale\.mo $(CURDIR)/debian/espresso-ubuntu-doc/usr/share/locale/$$locale/LC_MESSAGES/ubuntu-installer.mo; done
	cp -r $(CURDIR)/htmldocs/ubuntu $(CURDIR)/debian/espresso-ubuntu-doc/usr/share/espresso/htmldocs/

	# Ubuntu-artwork
	cp -r $(CURDIR)/glade/pixmaps/ubuntu $(CURDIR)/debian/espresso-ubuntu-artwork/usr/share/espresso/glade/pixmaps/

	# Guadalinex-doc
	for locale in $$(find $(BUILDDIR)/guadalinex/ -name \*.mo -exec basename {} \; | sed -e 's/\.mo//g'); do mkdir -p $(CURDIR)/debian/espresso-guadalinex-doc/usr/share/locale/$$locale/LC_MESSAGES/; mv $(BUILDDIR)/guadalinex/$$locale\.mo $(CURDIR)/debian/espresso-guadalinex-doc/usr/share/locale/$$locale/LC_MESSAGES/guadalinex-installer.mo; done
	cp -r $(CURDIR)/htmldocs/guadalinex $(CURDIR)/debian/espresso-guadalinex-doc/usr/share/espresso/htmldocs/ 2> /dev/null || true

	# Guadalinex-artwork
	cp -r $(CURDIR)/glade/pixmaps/guadalinex $(CURDIR)/debian/espresso-guadalinex-artwork/usr/share/espresso/glade/pixmaps/

	# Gtk+ Frontend
	cp $(CURDIR)/lib/frontend/gtkui.py $(CURDIR)/debian/espresso-frontend-gtk/usr/lib/python2.4/site-packages/espresso/frontend/
	cp $(CURDIR)/glade/liveinstaller.glade* $(CURDIR)/debian/espresso-frontend-gtk/usr/share/espresso/glade/

	# Network Cloner Frontend
	cp $(CURDIR)/lib/frontend/netcloner.py $(CURDIR)/debian/espresso-frontend-cloner/usr/lib/python2.4/site-packages/espresso/frontend/
	cp $(CURDIR)/netcloner $(CURDIR)/debian/espresso-frontend-cloner/usr/sbin/

	# Espresso core
	cp $(CURDIR)/lib/frontend/noui.py $(CURDIR)/debian/espresso/usr/lib/python2.4/site-packages/espresso/frontend/
	cp $(CURDIR)/lib/frontend/__init__.py $(CURDIR)/debian/espresso/usr/lib/python2.4/site-packages/espresso/frontend/
	cp -a $(CURDIR)/lib/{*.py,backend,components} $(CURDIR)/debian/espresso/usr/lib/python2.4/site-packages/espresso/
	cp $(CURDIR)/ubuntu-express $(CURDIR)/installer $(CURDIR)/debian/espresso/usr/bin/
	cp -a $(CURDIR)/compat/* $(CURDIR)/debian/espresso/usr/share/espresso/
	rm -rf `find $(CURDIR)/debian/ -mindepth 2 -type d -name .svn`

# Build architecture-independent files here.
binary-indep: DH_OPTIONS=-i
binary-indep: install
	dh_testdir
	dh_testroot
	dh_installchangelogs Changelog
	dh_installdocs
#	dh_installexamples
#	dh_install
	dh_installdebconf
#	dh_installman
	dh_strip
	dh_compress
	dh_fixperms
	dh_python
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol
	dh_md5sums
	dh_builddeb

# Build architecture-dependent files here.
binary-arch: install

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install
