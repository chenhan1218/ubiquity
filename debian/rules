#! /usr/bin/make -f

tmp = $(CURDIR)/debian/oem-config
tmp_udeb = $(CURDIR)/debian/oem-config-udeb

build:

clean:
	dh_testdir
	dh_testroot
	find -type f -name '*.pyc' -print0 | xargs -0r rm -f
	dh_clean

binary-arch:

binary-indep: build
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs -i
	dh_install -poem-config oem-config oem-config-dm oem-config-firstboot \
		oem-config-prepare usr/sbin/
	dh_install -poem-config *.py /usr/lib/oem-config/
	dh_install -poem-config menu/* usr/lib/oem-config/menu/
	set -e; for x in menu/*.templates; do \
		po2debconf --podir=debian/po $$x \
			> $(tmp)/usr/lib/oem-config/menu/$${x##*/}; \
	done
	cp debian/lintian-override $(tmp)/usr/share/lintian/overrides/oem-config
	install -m755 debian/prebaseconfig \
		$(tmp_udeb)/usr/lib/prebaseconfig.d/01oem-config-udeb
	dh_installdebconf -i
	dh_installdocs
	dh_installchangelogs
	dh_installinit -n
	dh_compress -i
	dh_fixperms -i
	dh_python
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary: binary-arch binary-indep

.PHONY: build clean binary-arch binary-indep binary
