import gtk
from aptdaemon import client
from aptdaemon.gtkwidgets import AptProgressDialog
import sys

purge = ['ubiquity']
ac = client.AptClient()
t = ac.commit_packages([], [], [], purge, [], wait=False, reply_handler=None, \
                                                          error_handler=None)

apt_dialog = AptProgressDialog(t)
theme = gtk.icon_theme_get_default()
apt_dialog.set_icon(icon = theme.load_icon("update-manager", 16, 0))
apt_dialog.set_position('center-always')
try:
    apt_dialog.run()
    super(AptProgressDialog, apt_dialog).run()
except dbus.exceptions.DBusException, err:
    msg = str(err)
    dia = gtk.MessageDialog(type=gtk.MESSAGE_ERROR,
                            buttons=gtk.BUTTONS_CLOSE,
                            message_format=msg)
    dia.run()
    dia.hide()
    sys.exit(1)
